    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "esModuleInterop": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "noEmitOnError": true,
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*"]
}